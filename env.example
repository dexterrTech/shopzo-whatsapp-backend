# Environment Configuration for WhatsApp Dashboard Server

# Node Environment
NODE_ENV=development
PORT=8000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Facebook Graph API credentials
INTERAKT_WABA_ID=your_waba_id_here
INTERAKT_ACCESS_TOKEN=your_access_token_here
INTERAKT_PHONE_NUMBER_ID=your_phone_number_id_here

# API Base URLs
FACEBOOK_GRAPH_API_BASE_URL=https://graph.facebook.com
INTERAKT_API_BASE_URL=https://api.interakt.ai
INTERAKT_AMPED_EXPRESS_BASE_URL=https://amped-express.interakt.ai
INTERAKT_BASE_URL=https://interakt.ai

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
WEBHOOK_URL=https://your-domain.com/api/interaktWebhook

# Server Configuration
SERVER_URL=https://your-domain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_dashboard
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CONNECTION_STRING=postgresql://your_db_user:your_db_password@localhost:5432/whatsapp_dashboard

# Feature Flags
USE_FALLBACK_WHEN_ERROR=true

# API Versions
FACEBOOK_API_VERSION=v18.0
INTERAKT_API_VERSION=v1
