DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CONNECTION_STRING=postgresql://your_db_user:your_db_password@localhost:5432/shopzo_whatsapp

# Feature Flags
USE_FALLBACK_WHEN_ERROR=true

# API Versions
FACEBOOK_API_VERSION=v17.0
INTERAKT_API_VERSION=v1
