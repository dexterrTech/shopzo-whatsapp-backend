# Environment Configuration
NODE_ENV=development
PORT=8000

# Facebook Graph API credentials
INTERAKT_WABA_ID=your_waba_id_here
INTERAKT_ACCESS_TOKEN=your_access_token_here
INTERAKT_PHONE_NUMBER_ID=your_phone_number_id_here

# API Base URLs
FACEBOOK_GRAPH_API_BASE_URL=https://graph.facebook.com
INTERAKT_API_BASE_URL=https://api.interakt.ai
INTERAKT_AMPED_EXPRESS_BASE_URL=https://amped-express.interakt.ai
INTERAKT_BASE_URL=https://app.interakt.ai

# Webhook Configuration
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
WEBHOOK_URL=https://your-domain.com/webhook

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
